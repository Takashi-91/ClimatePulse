<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_background"
        android:contextClickable="true"
        android:gravity="center"
        android:padding="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </FrameLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/righteous"
        android:text="Search"
        android:textColor="#000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="11dp">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="369dp"
        android:layout_height="278dp"
        android:background="@drawable/ic_background">

        <TextView
            android:id="@+id/description"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="222dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/real_feel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="31dp"
            android:layout_marginBottom="54dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="212dp"
            android:layout_marginBottom="92dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="204dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageViewWeatherIcon"
            android:layout_width="178dp"
            android:layout_height="143dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/ic_background"
            android:contentDescription="Weather Icon" />

        <TextView
            android:id="@+id/Country"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="17dp"
            android:fontFamily="@font/righteous"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="106dp"
            android:layout_marginEnd="84dp"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:text="@string/temperature" />

        <TextView
            android:id="@+id/maxTemp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous" />

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous" />

        <TextView
            android:id="@+id/dtText"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="188dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="189dp"
            android:layout_marginBottom="251dp"
            android:fontFamily="@font/righteous"
            android:gravity="center" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="372dp"
        android:layout_height="10dp">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:background="@drawable/ic_background">

        <TextView
            android:id="@+id/sunRise"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="107dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous"
            android:gravity="center" />

        <TextView
            android:id="@+id/sunSet"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous"
            android:gravity="center" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieview3"
            android:layout_width="220dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_background"
            android:cropToPadding="false"
            android:filterTouchesWhenObscured="false" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="385dp"
        android:layout_height="11dp">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="378dp"
        android:layout_height="161dp"
        android:background="@drawable/ic_background">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView1"
            android:layout_width="101dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="268dp"
            android:layout_marginBottom="38dp" />

        <TextView
            android:id="@+id/windSpeed"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="53dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous" />

        <TextView
            android:id="@+id/windDrag"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="170dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView2"
            android:layout_width="100dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="252dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="26dp" />

        <TextView
            android:id="@+id/humidtiyText"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="131dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/ic_background"
            android:fontFamily="@font/righteous" />

        <TextView
            android:id="@+id/visa"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="@font/righteous"
            android:gravity="center" />

    </RelativeLayout>

</LinearLayout>
